extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 #{data.projects[id].project_name}
        p.lead.text-light
        p #{data.projects[id].description}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each technology in data.projects[id].technologies
            li= technology
    
        a.button.expanded(href=`${data.projects[id].live_link}`   target="_blank") Live Demo
        a.button.expanded(href=`${data.projects[id].github_link}` target="_blank") Github Repo

      ul
        each image in data.projects[id].image_urls
            img.image(src=`${image}`)
